# NAU AI Assistant Backend Environment Variables
# Скопируйте этот файл в .env и настройте переменные

# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ СЕРВЕРА
# ===========================================
HOST=localhost
PORT=8000
DEBUG=true
ENVIRONMENT=development

# ===========================================
# ПУТИ К ДАННЫМ
# ===========================================
# Путь к векторной базе данных
VECTOR_DB_PATH=./nau_vector_db

# Путь к директории с новостями НАУ
NEWS_DATA_PATH=E:\naugpt\news\nau_news

# ===========================================
# AI НАСТРОЙКИ
# ===========================================
# URL LM Studio API
LM_STUDIO_URL=http://localhost:1234/v1/chat/completions

# Таймаут для запросов к LM Studio (секунды)
LM_STUDIO_TIMEOUT=300

# Модель по умолчанию
DEFAULT_MODEL=gemma-3-4b-it

GEMINI_API_KEY=your_key

GEMINI_MODEL=gemini-2.0-flash

USE_GEMINI=True
# ===========================================
# НАСТРОЙКИ ГЕНЕРАЦИИ
# ===========================================
# Температура для генерации ответов (0.0-1.0)
GENERATION_TEMPERATURE=0.3

# Максимальное количество токенов в ответе
MAX_TOKENS=10000

# Максимальное количество сообщений в истории
MAX_HISTORY_MESSAGES=10

# ===========================================
# НАСТРОЙКИ ПОИСКА В БД
# ===========================================
# Количество результатов поиска по умолчанию
SEARCH_TOP_K=3

# Количество дней для поиска недавних новостей
RECENT_NEWS_DAYS=30

# ===========================================
# НАСТРОЙКИ РАСПИСАНИЯ
# ===========================================
# Включить кэширование расписания
SCHEDULE_CACHE_ENABLED=true

# Таймаут для запросов к порталу НАУ (секунды)
SCHEDULE_REQUEST_TIMEOUT=10

# Базовый URL портала НАУ
NAU_PORTAL_BASE_URL=https://portal.nau.edu.ua

# ===========================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# ===========================================
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# Показывать системные промпты в логах
LOG_SYSTEM_PROMPTS=true
# ===========================================
# БЕЗОПАСНОСТЬ И ОГРАНИЧЕНИЯ
# ===========================================
# Максимальное количество запросов в минуту от одного IP
RATE_LIMIT_REQUESTS=100

# Период для rate limiting (секунды)
RATE_LIMIT_PERIOD=60

# ===========================================
# ВЕКТОРНАЯ БАЗА ДАННЫХ
# ===========================================
# Модель для создания эмбеддингов
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Размер батча для обработки документов
BATCH_SIZE=100

# ===========================================
# СЕМЕСТР И РАСПИСАНИЕ
# ===========================================
# Дата начала семестра (для расчета недель расписания)
SEMESTER_START_DATE=2025-09-01

# ===========================================
# CORS НАСТРОЙКИ
# ===========================================
# Разрешенные origins для CORS (через запятую)
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ===========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ===========================================
# Включить метрики Prometheus
ENABLE_METRICS=false

# Включить Sentry для отслеживания ошибок
ENABLE_SENTRY=false
SENTRY_DSN=

# Redis для кэширования (если используется)
REDIS_URL=redis://localhost:6379

# ===========================================
# РАЗРАБОТКА И ОТЛАДКА
# ===========================================
# Включить автоперезагрузку при изменении файлов
AUTO_RELOAD=true

# Показывать подробные трейсбеки ошибок
SHOW_ERROR_DETAILS=true

# Включить профилирование запросов
ENABLE_PROFILING=false

# ===========================================
# ПРОДАКШН НАСТРОЙКИ
# ===========================================
# Для продакшена установите:
# DEBUG=false
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# LOG_SYSTEM_PROMPTS=false
# SHOW_ERROR_DETAILS=false
# AUTO_RELOAD=false

# Пример настроек для продакшена:
# HOST=0.0.0.0
# PORT=8000
# DEBUG=false
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# LOG_SYSTEM_PROMPTS=false